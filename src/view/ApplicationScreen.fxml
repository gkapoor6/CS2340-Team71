<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ApplicationScreenController">
   <center>
       <AnchorPane BorderPane.alignment="CENTER">
           <Button layoutX="312.0" layoutY="558.0" mnemonicParsing="false" onAction="#handleLogoutPressed" text="Logout">
              <font>
                  <Font size="14.0" />
              </font>
           </Button>
           <Label layoutX="69.0" text="Welcome to the Water Reporting System!">
              <font>
                  <Font name="Sitka Text Bold Italic" size="25.0" />
              </font>
           </Label>
           <Button layoutX="295.0" layoutY="354.0" mnemonicParsing="false" onAction="#handleEditProfilePressed" text="Edit Profile">
              <font>
                  <Font size="14.0" />
              </font>
           </Button>
           <Button layoutX="279.0" layoutY="192.0" mnemonicParsing="false" onAction="#handleActualReportsPressed" text="Source Reports">
              <font>
                  <Font size="14.0" />
              </font>
           </Button>
           <Button layoutX="257.0" layoutY="228.0" mnemonicParsing="false" onAction="#handleReportDataPressed" text="Report Water Source">
              <font>
                  <Font size="14.0" />
              </font>
           </Button>
           <Button layoutX="254.0" layoutY="141.0" mnemonicParsing="false" onAction="#handleViewAllReports" text="View All Reports on Map">
              <font>
                  <Font size="14.0" />
              </font>
           </Button>
           <Label layoutX="201.0" layoutY="52.0" text="Please select one of the following options">
              <font>
                  <Font name="System Bold" size="15.0" />
              </font>
           </Label>
           <Button layoutX="283.0" layoutY="266.0" mnemonicParsing="false" onAction="#handlePurityReports" text="Purity Reports">
              <font>
                  <Font size="14.0" />
              </font>
           </Button>
           <Button layoutX="265.0" layoutY="306.0" mnemonicParsing="false" onAction="#handleReportPurity" text="Report Water Purity">
              <font>
                  <Font size="14.0" />
              </font>
           </Button>
           <Button layoutX="223.0" layoutY="98.0" mnemonicParsing="false" onAction="#handleWaterQualityHistoryGraph" text="View Water Quality History Graph">
            <font>
               <Font size="14.0" />
            </font></Button>
         <Button fx:id="deleteAccount" layoutX="288.0" layoutY="402.0" mnemonicParsing="false" onAction="#handleDeleteAccount" text="Delete Account" />
         <Button fx:id="banUser" layoutX="308.0" layoutY="448.0" mnemonicParsing="false" onAction="#handleBanUser" text="Ban User" />
         <Button fx:id="unblockAccount" layoutX="283.0" layoutY="484.0" mnemonicParsing="false" onAction="#handleUnblockAccount" text="Unblock Account" />
         <Button fx:id="viewSecurityLog" layoutX="284.0" layoutY="519.0" mnemonicParsing="false" onAction="#handleViewSecurityLog" text="View Security Log" />
       </AnchorPane>
   </center>
</BorderPane>
